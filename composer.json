{
  "name": "spryker/merchant-switcher",
  "type": "library",
  "description": "MerchantSwitcher module",
  "license": "proprietary",
  "require": {
    "php": ">=7.3",
    "spryker/cart": "^7.0.0",
    "spryker/cart-extension": "^4.0.0",
    "spryker/checkout-extension": "^1.2.0",
    "spryker/kernel": "^3.30.0",
    "spryker/merchant-product-offer": "^0.6.0",
    "spryker/quote": "^2.0.0",
    "spryker/wishlist-extension": "^1.0.0",
    "spryker/zed-request": "^3.0.0"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/customer": "*",
    "spryker/merchant": "*",
    "spryker/product-offer": "*",
    "spryker/propel": "*",
    "spryker/testify": "*",
    "spryker/wishlist": "*"
  },
  "autoload": {
    "psr-4": {
      "Spryker\\": "src/Spryker/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SprykerTest\\": "tests/SprykerTest/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/ tests/",
    "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/ tests/"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
